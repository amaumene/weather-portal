{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "vite build",
    "preview": "vite preview",
    "fmt": "deno fmt --unstable-component && stylelint 'src/**/*.{vue,scss}' --fix"
  },
  "imports": {
    "@turf/distance": "npm:@turf/distance@^7.3.0",
    "@turf/helpers": "npm:@turf/helpers@^7.3.0",
    "@vueuse/core": "npm:@vueuse/core@^14.0.0",
    "sass-embedded": "npm:sass-embedded@^1.93.3",
    "stylelint-config-recess-order": "npm:stylelint-config-recess-order@^7.4.0",
    "stylelint-config-recommended-scss": "npm:stylelint-config-recommended-scss@^16.0.2",
    "stylelint-config-recommended-vue": "npm:stylelint-config-recommended-vue@^1.6.1",
    "stylelint-config-standard": "npm:stylelint-config-standard@^39.0.1",
    "vue": "npm:vue@^3.5.24"
  },
  "fmt": {
    "lineWidth": 100
  }
}
